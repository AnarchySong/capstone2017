<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whitebg"
    tools:context="com.groupc.officelocator.floorplan">

    <Button
        android:id="@+id/floorplanbutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="back" />

    <Button
        android:id="@+id/floorplanbutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="next" />

    <RadioGroup
        android:id="@+id/rgdsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


    </RadioGroup>

    <TextView
        android:id="@+id/floorPlanName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Floor plan"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rgsodatype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

    </RadioGroup>

    <ImageView
        android:id="@+id/floorPlanImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/miahammfloorplan" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select a room"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/floorPlanImage"
        android:layout_toRightOf="@+id/rgsodatype"
        android:layout_toEndOf="@+id/rgsodatype" />

    <Spinner
        android:id="@+id/roomSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff6600"
        android:layout_toRightOf="@+id/rgsodatype"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/rgsodatype" />
</RelativeLayout>
