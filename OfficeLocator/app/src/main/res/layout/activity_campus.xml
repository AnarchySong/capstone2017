<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.groupc.officelocator.campus">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/campusorange"
        android:cropToPadding="true"
        android:paddingTop="13dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/campus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:textSize="25sp"
        android:text="@string/campus_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/mh1"
        android:layout_width="52dip"
        android:layout_height="208dip"
        android:layout_below="@+id/campus"
        android:layout_marginTop="56dp"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selecttxt"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/searchbutton"
        android:layout_alignBottom="@+id/searchbutton"
        android:layout_toRightOf="@+id/mh1"
        android:layout_toEndOf="@+id/mh1" />


    <Button
        android:id="@+id/tw1"
        android:layout_width="110dip"
        android:layout_height="75dip"
        android:background="@android:color/transparent"
        android:visibility="visible"
        android:layout_marginTop="16dp"
        android:layout_alignTop="@+id/mh1"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/searchbutton"
        android:layout_width="70dip"
        android:layout_height="40dip"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/imageView5"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="30dip"
        android:layout_height="30dip"
        app:srcCompat="@drawable/searchicon"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />


</RelativeLayout>
